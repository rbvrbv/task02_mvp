<resources>

    <!-- Base application theme. -->
    <style name="HelperAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/leaf</item>
        <item name="colorAccent">@color/leaf</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="bottomNavigationStyle">@style/HelperBottomNavigation</item>
        <item name="materialButtonStyle">@style/HelperMaterialButton</item>
        <item name="tabStyle">@style/HelperTabLayout</item>
        <item name="toolbarStyle">@style/HelperToolbar</item>
    </style>

    <style name="HelperAppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/leaf</item>
    </style>

    <style name="HelperAppTheme.Search">
        <item name="colorControlNormal">@color/black_54</item>
        <item name="searchViewStyle">@style/HelperSearchView</item>
        <item name="android:textAppearanceMediumInverse">@style/HelperText.SearchEditText</item>
    </style>

    <style name="HelperBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/navigation_text</item>
        <item name="itemTextAppearanceInactive">@style/HelperText.Navigation</item>
        <item name="itemTextAppearanceActive">@style/HelperText.Navigation</item>
        <item name="itemTextColor">@color/navigation_text</item>
    </style>

    <style name="HelperMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/HelperText.Button</item>
    </style>

    <style name="HelperSearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="HelperTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="tabIndicatorColor">@color/macaroni_and_cheese</item>
        <item name="tabTextAppearance">@style/HelperText.TabLayout</item>
        <item name="tabTextColor">@color/tab_layout_text</item>
    </style>

    <style name="HelperToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="HelperText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="HelperText.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="HelperText.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="HelperText.Header1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="HelperText.Title1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="HelperText.Title2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>

    <style name="HelperText.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelperText.Navigation">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HelperText.TabLayout">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperText.SearchEditText">
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperText.ToolbarTitle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelperText.Text2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="HelperText.NewsTitle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="HelperText.NewsWhite">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelperText.TextGrey">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="HelperText.Link">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/leaf</item>
    </style>

    <style name="HelperText.TextLikes">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="HelperText.TextStyle3">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

</resources>
