<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/splash_top_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="@integer/splash_layout_weight"
            android:src="@drawable/icon_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="@integer/splash_layout_weight"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="@dimen/splash_progressbar_size"
                android:layout_height="@dimen/splash_progressbar_size"
                android:indeterminateTint="@color/turtle_green"
                android:indeterminateTintMode="src_in"/>

            <TextView
                style="@style/HelperText.Header1"
                android:layout_marginTop="@dimen/splash_load_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_text_load"/>

        </LinearLayout>

        <ImageView
            android:layout_height="0dp"
            android:layout_width="@dimen/splash_mss_icon_width"
            android:layout_gravity="center"
            android:layout_weight="@integer/splash_layout_weight"
            android:src="@drawable/logo_mss"/>

    </LinearLayout>

</LinearLayout>