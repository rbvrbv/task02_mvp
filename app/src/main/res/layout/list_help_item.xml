<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/help_list_items_margin"
    android:layout_marginBottom="@dimen/help_list_items_margin"
    android:padding="@dimen/help_list_items_padding"
    android:background="@color/light_grey"
    android:gravity="center">

        <ImageView
            android:id="@+id/list_help_item_image"
            android:layout_width="@dimen/help_list_items_picture_width"
            android:layout_height="@dimen/help_list_items_picture_height"
            android:layout_weight="1"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/list_help_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/HelperText.Title2"/>

</LinearLayout>

